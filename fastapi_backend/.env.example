# API Configuration
API_V1_STR=/api
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=1440  # 1 day
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Project Info
PROJECT_NAME=Plant Data Management API
PROJECT_DESCRIPTION=API for managing plant data and formula variables
PROJECT_VERSION=0.1.0

# CORS Settings (comma-separated list of allowed origins)
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:5173

# Database Settings
# If these are provided, PostgreSQL will be used, otherwise SQLite
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=plant_db
DB_USE_SSL=false  # Set to true for SSL connections (production)
# Or directly specify the database URI
# SQLALCHEMY_DATABASE_URI=postgresql://postgres:postgres@localhost:5432/plant_db

# Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=true  # Set to false in production

# Email Settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=no-reply@example.com
EMAILS_FROM_NAME=Plant Management System
EMAILS_USE_TLS=true

# External APIs
GROQ_API_KEY=your-groq-api-key

# Frontend URL for links in emails
FRONTEND_URL=http://localhost:5173

# Logging
LOG_LEVEL=info  # debug, info, warning, error, critical
SQL_LOG_LEVEL=warning  # debug, info, warning, error, critical
LOG_DIR=logs  # Directory to store log files in production 